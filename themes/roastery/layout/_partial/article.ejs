<article>
    <% if (post.image) { %>
    <header class="background-banner" style="background-image: url('<%- post.image %>')">
    <% } else {%>
    <header>
    <% } %>
        <h1><%- post.title %></h1>
        <% if (post.subtitle) { %>
        <span class="subtitle"><%- post.subtitle %></span>
        <% } %>
    </header>
    <div class="article-content">
        <%- post.content %>
    </div>
    <footer>
        <section class="container-fluid">
            <div class="row justify-items-center">
                <div class="col text-center">
                    <a id="twitterShareButton" class="share-button" href="https://twitter.com/intent/tweet?text=<%- page.title %>&url=<%- url %>&via=DIYRoasters" data-size="large"
                        target="_blank" rel="noopener" aria-label="Share on Twitter">
                        <i class="si-twitter" aria-hidden="true"></i>
                    </a>
                    <a id="pinterestShareButton" class="share-button" href="https://www.pinterest.com/pin/create/button/" data-pin-do="buttonBookmark"
                        data-pin-custom="true" target="_blank" rel="noopener" aria-label="Share on Pinterest">
                        <i class="si-pinterest" aria-hidden="true"></i>
                    </a>
                    <a id="facebookShareButton" class="share-button"  href="https://www.facebook.com/sharer/sharer.php?u=<%- url %>" target="_blank"
                        rel="noopener" aria-label="Share on Facebook">
                        <i class="si-facebook" aria-hidden="true"></i>
                    </a>
                    <a id="googleShareButton" class="share-button" href="https://plus.google.com/share?url=<%- url %>" target="_blank" rel="noopener"
                        aria-label="Share on Google Plus">
                        <i class="si-google-plus" aria-hidden="true"></i>
                    </a>
                </div>
            </div>
        </section>
    </footer>
</article>

